<Window x:Class="TetrisMVC.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisMVC"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="700" FontSize="14" Background="#04c584">
	<Border Background="#2e3137" CornerRadius="20" Margin="20">
		<StackPanel Margin="20">
			<Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
			<Separator></Separator>
			<Label Content="Username" Foreground="White"></Label>
			<TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"></TextBox>
			<Label Content="Password" Foreground="White"></Label>
			<PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"></PasswordBox>
			<Button Name="btnSubmit" Click="btnSubmit_Click" Content="SUBMIT" Background="#545d6a" Margin="200" Foreground="White" FontSize="25"></Button>
		</StackPanel>
		
	</Border>
</Window>
