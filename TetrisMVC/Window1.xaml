<Window x:Class="TetrisMVC.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisMVC"
        mc:Ignorable="d"
        Title="Chọn chế độ - Tetris Game" Height="520" Width="300">
    <Grid Background="#FF3E3C3C">
        <Label x:Name="label" Content="Select level :" HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" Height="45" Width="105" FontWeight="Bold" FontSize="18"/>
        <Button x:Name="button" Content="Start Game" HorizontalAlignment="Left" Margin="79,308,0,0" VerticalAlignment="Top" Width="139" Height="47" FontSize="24" Click="button_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="148,69,0,0" VerticalAlignment="Top" Width="120">

            <ComboBoxItem IsSelected="True">Level 1</ComboBoxItem>
            <ComboBoxItem>Level 2</ComboBoxItem>
            <ComboBoxItem>Level 3</ComboBoxItem>
            <ComboBoxItem>Level 4</ComboBoxItem>
            <ComboBoxItem>Level 5</ComboBoxItem>
            <ComboBoxItem>Level 6</ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
