<Window x:Class="TetrisMVC.highScore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisMVC"
        mc:Ignorable="d"
        Title="HighScore" Height="456.491" Width="427.748">
    <Grid Background="DimGray">
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Width="422" Background="DimGray"  AutoGenerateColumns="False" IsReadOnly="True" Height="356" VerticalAlignment="Top">

            <DataGrid.Columns>
                <DataGridTextColumn Header="FullName" Binding="{Binding Path=fullname}" Width="300"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Path=score}" Width="110"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="button" Content="Menu" HorizontalAlignment="Left" Margin="150,371,0,0" VerticalAlignment="Top" Width="120" Height="44" Click="button_Click" FontSize="24"/>

    </Grid>
</Window>
