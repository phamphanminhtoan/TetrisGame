<Window x:Class="TetrisMVC.signIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisMVC"
        mc:Ignorable="d"
        Title="Sign in" Height="300" Width="335">
    <Grid Background="DimGray">
        <Label x:Name="label" Content="Username" HorizontalAlignment="Left" Margin="20,43,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="label_Copy" Content="Password" HorizontalAlignment="Left" Margin="20,84,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="143,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="143,92,0,0" VerticalAlignment="Top" Width="139"/>
        <Button x:Name="button" Content="Sign in" HorizontalAlignment="Left" Margin="115,167,0,0" VerticalAlignment="Top" Width="105" Height="38" Click="button_Click" FontSize="24"/>

    </Grid>
</Window>
